{
  "name": "bcad",
  "publisher": "ixmilia",
  "displayName": "BCad",
  "description": "BCad editor for VS Code",
  "version": "42.42.42",
  "engines": {
    "vscode": "^1.46.0"
  },
  "preview": true,
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ixmilia/bcad"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:ixmilia-bcad"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "ms-dotnettools.vscode-dotnet-runtime"
  ],
  "contributes": {
    "configuration": {
      "title": "BCad Drawing Editor",
      "properties": {
        "ixmilia-bcad.minimumRuntimeVersion": {
          "type": "string",
          "default": "3.1",
          "description": "The minimum required version of the .NET runtime."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "ixmilia-bcad",
        "displayName": "BCad",
        "selector": [
          {
            "filenamePattern": "*.{dxb,dxf,ige,igs,iges}"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile:extension": "tsc",
    "compile:build-client": "pwsh ../client/build.ps1",
    "compile:copy-client": "npx copyfiles --error --verbose --flat ../client/out/pack/index.html media",
    "compile": "npm run compile:extension && npm run compile:build-client && npm run compile:copy-client",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "copyfiles": "^2.3.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vsce": "^1.77.0",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "resize-observer": "^1.0.0",
    "vscode-jsonrpc": "^5.0.1",
    "webgl-strict-types": "^1.0.3"
  }
}
