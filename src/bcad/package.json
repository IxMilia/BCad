{
  "name": "bcad",
  "version": "1.0.0",
  "description": "A minimal Electron application written with Typescript",
  "main": "./dist/main.js",
  "config": {
    "configuration": "Debug"
  },
  "scripts": {
    "build": "tsc",
    "build-all": "npm run build && npm run build-assets",
    "build-assets": "npm run build-icons && npm run build-server",
    "build-icons": "icon-gen -i ./bcad.svg -o ./dist --ico name=bcad sizes=32",
    "build-server": "run-script-os",
    "build-server:linux": "./build-server.sh --configuration $npm_package_config_configuration",
    "build-server:win32": "build-server.cmd --configuration %npm_package_config_configuration%",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "pack-all": "run-script-os",
    "pack-all:linux": "electron-packager . --platform=linux --arch=x64 --icon=./dist/bcad.ico --extra-resource=../../artifacts/bin/IxMilia.BCad.Server/$npm_package_config_configuration/netcoreapp3.1/linux-x64/publish/ --out=../../artifacts/pack --overwrite",
    "pack-all:win32": "electron-packager . --platform=win32 --arch=x64 --icon=./dist/bcad.ico --extra-resource=../../artifacts/bin/IxMilia.BCad.Server/%npm_package_config_configuration%/netcoreapp3.1/win-x64/publish/ --out=../../artifacts/pack --overwrite",
    "pack": "npm run build-all && npm run pack-all",
    "start": "npm run build && electron ./dist/main.js -- debug local"
  },
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "8.2.4",
    "electron-packager": "14.2.1",
    "icon-gen": "2.0.0",
    "run-script-os": "1.1.1",
    "tslint": "6.1.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "resize-observer": "1.0.0",
    "vscode-jsonrpc": "5.0.1"
  }
}
